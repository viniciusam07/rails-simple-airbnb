<h1>All our Flats <%= "(#{@flats.count})" %></h1>

<ul>
  <% @flats.each do |flat|  %>
    <li>
      <%= link_to flat.name, flat_path(flat) %>
      <%= flat.address %>
      <%= flat.price_per_night %>
      <%= flat.number_of_guests %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Add a new flat', new_flat_path %></p>
